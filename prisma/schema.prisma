// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Writer {
  id     Int @id @default(autoincrement())
  userId Int @unique

  user User @relation(fields: [userId], references: [id])

  post Post[]
}

model Reader {
  id     Int @id @default(autoincrement())
  userId Int @unique

  user User @relation(fields: [userId], references: [id])

  post Post[]
}

model User {
  id            Int      @id @default(autoincrement())
  walletAddress String   @unique
  createdAt     DateTime
  updatedAt     DateTime
  email         String?  @unique
  ens           String?  @unique
  image         String?
  bio           String?
  username      String?  @unique

  writer Writer?
  reader Reader?
}

model Publication {
  name String @id @unique

  posts Post[]
}

model Post {
  id               Int      @id @default(autoincrement())
  uuid             String   @unique
  publishedAt      DateTime
  trxHash          String   @unique
  title            String
  seoTitle         String
  coverImageURL    String
  contentSnippet   String   @db.VarChar(600)
  fullContentS3URL String
  cursor           String
  publicationName  String
  metadata         Json?    @db.Json

  publication Publication @relation(fields: [publicationName], references: [name], onDelete: Cascade)

  trendingPosts TrendingPost[]

  writerId Int
  writer   Writer @relation(fields: [writerId], references: [id])

  readers Reader[]

  @@index([publishedAt])
}

model TrendingPost {
  id        Int      @id @default(autoincrement())
  uuid      String   @unique
  createdAt DateTime

  posts Post[]
}
